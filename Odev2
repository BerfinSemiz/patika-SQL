--1. film tablosunda bulunan tüm sütunlardaki verileri replacement_cost değeri 12.99 ile 16.99 arasında (dahil) olacak şekilde sıralayınız.
SELECT * 
FROM film 
WHERE replacement_cost BETWEEN 12.99 AND 16.99;

--2. actor tablosunda bulunan first_name ve last_name sütunlarındaki verileri first_name 'Penelope', 'Nick' veya 'Ed' olan aktörler için listeleyiniz.
SELECT first_name, last_name 
FROM actor 
WHERE first_name IN ('Penelope', 'Nick', 'Ed');

--3. film tablosunda bulunan tüm sütunlardaki verileri rental_rate 0.99, 2.99 veya 4.99 olan VE replacement_cost 12.99, 15.99 veya 28.99 olan verileri sıralayınız.
SELECT * 
FROM film 
WHERE rental_rate IN (0.99, 2.99, 4.99) 
  AND replacement_cost IN (12.99, 15.99, 28.99);

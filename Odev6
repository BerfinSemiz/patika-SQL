--1. film tablosundaki tüm filmlerin rental_rate ortalamasını bulunuz.
SELECT AVG(rental_rate) 
FROM film;

--2. film tablosunda adı 'C' harfi ile başlayan film sayısını bulunuz.
SELECT COUNT(*) 
FROM film 
WHERE title LIKE 'C%';

--3. rental_rate değeri 0.99 olan filmler arasında en uzun filmin uzunluğunu bulunuz.
SELECT MAX(length) 
FROM film 
WHERE rental_rate = 0.99;

--4. uzunluğu 150’den büyük filmler arasında farklı replacement_cost sayısını bulunuz.
SELECT COUNT(DISTINCT replacement_cost) 
FROM film 
WHERE length > 150;
